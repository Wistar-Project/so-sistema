# programa principal
while true
do
  clear
  opcion=$(yad --list \
    --title=" * MENU Administración del sistema * " \
    --height=300 \
    --width=300 \
    --button=Aceptar:0 \
    --center \
    --text="Seleccione una opción: " \
    --column="ABM U / L" \
    "Usuarios" "Logs" "Salir (Esc)")
  ans=$?
  if [ $ans -eq 0 ]
  then
    case $opcion in
    Usuarios*)
      ./usuarios;;
    Logs*)
      ./logs;;
    Salir*)
      exit;;
    esac
  else
    exit
  fi
done
